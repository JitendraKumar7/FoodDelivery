<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".ActivityUtil.ProductCart">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="?attr/colorDefaultFavouriteIcon"></TextView>

        <LinearLayout
            android:id="@+id/layout_coupon"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp">

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_coupon"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_coupon"
                    android:tint="?attr/colorBottomNavigation"></ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="20dp">


                <com.haris.meal4u.TextviewUtil.LabelTextview
                    android:id="@+id/txt_apply_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apply_coupon"
                    android:textColor="?attr/colorBottomNavigation"
                    android:textSize="@dimen/normal_text_size"></com.haris.meal4u.TextviewUtil.LabelTextview>

                <com.haris.meal4u.TextviewUtil.TaglineTextview
                    android:id="@+id/txt_coupon_tagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/coupon_tagline"
                    android:textColor="?attr/colorTagline"
                    android:textSize="@dimen/tagline_text_size"></com.haris.meal4u.TextviewUtil.TaglineTextview>


            </LinearLayout>

            <ImageView
                android:id="@+id/image_done"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:padding="7dp"
                android:src="@drawable/ic_done"
                android:tint="?attr/colorBottomNavigation"
                android:visibility="gone"></ImageView>

            <ImageView
                android:id="@+id/image_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:src="@drawable/ic_forward"
                android:tint="?attr/colorDefaultNavigationIcon"></ImageView>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="?attr/colorDefaultFavouriteIcon"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/grand_total"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size"></com.haris.meal4u.TextviewUtil.NormalTextview>

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_grand_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 250 /-"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size"></com.haris.meal4u.TextviewUtil.NormalTextview>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?attr/colorDefaultFavouriteIcon"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:text="@string/delivery_charges"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size">

                    <com.haris.meal4u.TextviewUtil.NormalTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/delivery_charges"
                        android:textColor="?attr/colorNormal"
                        android:textSize="@dimen/tagline_text_size" />

                    <com.haris.meal4u.TextviewUtil.NormalTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Above 200 no delivery charges"
                        android:textColor="?attr/colorNormal"
                        android:textSize="10sp" />
                </LinearLayout>

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_delivery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 0 /-"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?attr/colorDefaultFavouriteIcon" />

            <LinearLayout
                android:id="@+id/lbl_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size" />

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 300 /-"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?attr/colorDefaultFavouriteIcon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size" />

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 300 /-"
                    android:textColor="?attr/colorNormal"
                    android:textSize="@dimen/tagline_text_size" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.haris.meal4u.TextviewUtil.NormalTextview
                android:id="@+id/txt_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_call_to_action"
                android:gravity="center"
                android:text="@string/proceed_to_checkout"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>