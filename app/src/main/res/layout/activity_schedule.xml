<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="?attr/colorBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.haris.meal4u.TextviewUtil.NormalTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Thank you! Your order has been placed successfully!"
                android:textSize="20dp" />

            <com.haris.meal4u.TextviewUtil.NormalTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="30dp" />

            <com.haris.meal4u.TextviewUtil.NormalTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Delivery Information"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/default_text_size"
                android:layout_height="wrap_content">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="ORDER ID"
                    android:textSize="@dimen/tagline_text_size" />

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_order_id"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="#8596"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/default_text_size"
                android:layout_height="wrap_content">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="USER"
                    android:textSize="@dimen/tagline_text_size" />

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_order_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="#8596"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/default_text_size"
                android:layout_height="wrap_content">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="ADDRESS"
                    android:textSize="@dimen/tagline_text_size" />

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_order_address"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="#8596"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/default_text_size"
                android:layout_height="wrap_content">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="DATE"
                    android:textSize="@dimen/tagline_text_size" />

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_order_date"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="#8596"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/default_text_size"
                android:layout_height="wrap_content">

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="PAYMENT"
                    android:textSize="@dimen/tagline_text_size" />

                <com.haris.meal4u.TextviewUtil.NormalTextview
                    android:id="@+id/txt_order_payment"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textColor="@color/quantum_black_100"
                    android:text="#8596"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <com.haris.meal4u.TextviewUtil.NormalTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Order Items List"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

    <com.haris.meal4u.TextviewUtil.NormalTextview
        android:id="@+id/txt_done"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:background="@drawable/bg_call_to_action"
        android:gravity="center"
        android:text="New Order"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

</LinearLayout>