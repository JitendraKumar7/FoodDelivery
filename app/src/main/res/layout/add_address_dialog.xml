<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rect_bg_white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_cross_red"
        android:elevation="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <com.rch.etawah.EditTextUtil.NormalEditText
            android:id="@+id/edit_building"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="center_vertical"
            android:hint="@string/building"
            android:paddingStart="10dp"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorTagline"
            android:textSize="@dimen/tagline_text_size" />

        <com.rch.etawah.EditTextUtil.NormalEditText
            android:id="@+id/edit_unit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="center_vertical"
            android:hint="@string/floor_unit"
            android:paddingStart="10dp"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorTagline"
            android:textSize="@dimen/tagline_text_size"
            android:visibility="gone" />

        <com.rch.etawah.EditTextUtil.NormalEditText
            android:id="@+id/edit_street_address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="top"
            android:hint="@string/address"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorTagline"
            android:textSize="@dimen/tagline_text_size" />

        <com.rch.etawah.EditTextUtil.NormalEditText
            android:id="@+id/edit_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="center_vertical"
            android:hint="@string/area"
            android:paddingStart="10dp"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorTagline"
            android:textSize="@dimen/tagline_text_size" />

        <com.rch.etawah.EditTextUtil.NormalEditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="top"
            android:hint="@string/note_to_rider"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorTagline"
            android:textSize="@dimen/tagline_text_size"
            android:visibility="gone" />

        <com.rch.etawah.TextviewUtil.NormalTextview
            android:id="@+id/txt_submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_call_to_action"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

</RelativeLayout>