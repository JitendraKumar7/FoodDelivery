<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityUtil.RedeemCoupon">

    <include
        layout="@layout/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="51dp" />

    <com.haris.meal4u.TextviewUtil.LabelTextview
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="@string/coupon_title"
        android:textColor="?attr/colorNormal"
        android:textSize="@dimen/label_text_size"
        android:visibility="gone" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_coupon"
        android:tint="?attr/colorHeading"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <com.haris.meal4u.TextviewUtil.UbuntuRegularTextview
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/coupon_tagline_01"
        android:textAlignment="center"
        android:textColor="?attr/colorTagline"
        android:textSize="@dimen/tagline_text_size" />

    <com.haris.meal4u.EditTextUtil.NormalEditText
        android:id="@+id/edit_coupon_code"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_coin"
        android:gravity="center"
        android:hint="@string/coupon_code_tagline"
        android:textColor="?attr/colorNormal"
        android:textSize="@dimen/normal_text_size" />

    <com.haris.meal4u.TextviewUtil.NormalTextview
        android:id="@+id/layout_redeem"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_call_to_action"
        android:gravity="center"
        android:orientation="vertical"
        android:text="@string/redeem_it"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

    <View
        android:layout_marginTop="@dimen/default_text_size"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>